{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "outDir": "build/dist",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "paths": {
      "COMP/*": [ "src/components/*" ],
      "CONFIG/*": [ "src/config/*" ],
      "SCREENS/*": [ "src/screens/*" ],
      "STATIC/*": [ "src/static/*" ],
      "UTILS/*": [ "src/utils/*" ],
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
